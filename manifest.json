{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["tabs"],
    "browser_action": {
        "default_title": "My Extension",
        "default_popup": "popup.html"
    }
}